<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewCarActivity1">


    <TextView
        android:layout_marginTop="10dp"
        android:text="CrÃ©er nouvelle voiture 1/2"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="40dp"
        android:text="Type"
        android:gravity="center"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinType"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="40dp"
        android:text="Energie"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Spinner
        android:id="@+id/spinEnergie"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="40dp"
        android:text="Marque"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinMarque"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="40dp"
        android:text="Modele"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editModele"
        android:layout_width="300dp"
        android:hint="indiquer le modele"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <Button
        android:onClick="showNewCar2"
        android:layout_marginTop="70dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Etape suivante"
        android:layout_gravity="center"/>


</LinearLayout>
